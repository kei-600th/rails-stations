<h1>Schedule List</h1>

<% @schedules.group_by(&:movie).each do |movie, schedules| %>
  <h2><%= "#{movie.id}: #{movie.name}" %></h2>

  <table>
    <thead>
      <tr>
        <th>Start Time</th>
        <th>End Time</th>
      </tr>
    </thead>
    <tbody>
      <% schedules.each do |schedule| %>
        <tr>
          <td><%= link_to schedule.start_time.strftime("%H:%M"), admin_schedule_path(schedule) %></td>
          <td><%= link_to schedule.end_time.strftime("%H:%M"), admin_schedule_path(schedule) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
