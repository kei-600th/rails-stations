<h1>新規予約作成</h1>

<%= form_with(model: @reservation, url: admin_reservations_path, method: :post) do |form| %>
  <div class="form-group">
    <%= form.label :date, '日付' %>
    <%= form.date_field :date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :schedule_id, 'スケジュールID' %>
    <%= form.number_field :schedule_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :sheet_id, '座席ID' %>
    <%= form.number_field :sheet_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :name, '名前' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email, 'メールアドレス' %>
    <%= form.email_field :email, class: 'form-control' %>
  </div>

  <%= form.submit '予約する', class: 'btn btn-primary' %>
<% end %>
