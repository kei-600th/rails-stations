<h1>Edit Movie</h1>

<%= form_with(model: @movie, url: admin_movie_path(@movie), method: :patch, local: true) do |form| %>
  <!-- フォームフィールドの入力 -->
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :year %>
  <%= form.text_field :year %>

  <%= form.label :description %>
  <%= form.text_area :description %>

  <%= form.label :image_url %>
  <%= form.text_field :image_url %>

  <%= form.label :is_showing %>
  <%= form.check_box :is_showing %>

  <%= form.submit "Update Movie" %>
<% end %>

<%= link_to 'Delete Movie', admin_movie_path(@movie), method: :delete, data: { confirm: 'Are you sure?' } %>

<%= link_to 'Back', admin_movies_path %>
