<h1><%= @movie.name %> (<%= @movie.year %>)</h1>

<% if @movie.image_url.present? %>
  <img src="https://picsum.photos/100/100" alt="<%= @movie.name %> Image" style="width:100px;height:auto;">
<% else %>
  <p>No image available</p>
<% end %>

<p><%= @movie.description %></p>

<h2>上映スケジュール一覧</h2>
<table>
  <thead>
    <tr>
      <th>上映開始</th>
      <th>上映終了</th>
    </tr>
  </thead>
  <tbody>
    <% @movie.schedules.each do |schedule| %>
      <tr>
        <td><%= link_to schedule.start_time.strftime('%H:%M'), edit_admin_movie_schedule_path(@movie, schedule) %></td>
        <td><%= link_to schedule.end_time.strftime('%H:%M'), edit_admin_movie_schedule_path(@movie, schedule) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'スケジュールを追加する', new_admin_movie_schedule_path(@movie) %>

<br>

<h2>上映劇場一覧</h2>
<table>
  <thead>
    <tr>
      <th>上映劇場</th>
    </tr>
  </thead>
  <tbody>
    <% @movie.movie_cinemas.each do |movie_cinema| %>
      <tr>
        <td><%= link_to movie_cinema.cinema.name, admin_movie_movie_cinema_path(@movie, movie_cinema) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
<h3>上映劇場の追加</h3>
<%= form_with url: admin_movie_movie_cinemas_path(@movie), method: :post do |form| %>

  <div>
    <label for="cinema">Cinema:</label>
    <%= form.select :cinema_id, options_from_collection_for_select(@cinemas, "id", ->(cinema) { cinema.name}) %>
  </div>

  <div>
    <%= form.button '上映劇場を追加する' %>
  </div>
<% end %>





<br>
<%= link_to '戻る', admin_movies_path %>
